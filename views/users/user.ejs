<!--
    Information page for a specific user.
-->

<h3>User Information</h3>
<form method="POST" action="/users/<%= user.id %>?_method=DELETE"></form>
    <ul>
        <li>Name: <%= user.name %></li>
        <li>Email: <%= user.email %></li>
        <li>Access: <%= user.userTypes.join(', ') %></li>
        <li>Balance: <%= user.accountBalance %></li>
    </ul>
    <a href="/users/<%= user.id %>/edit">Edit</a>

    <button type="submit">Delete User</button>
</form>